@using WebApp.ViewModels.Category
@model CategoryIndexVM
<h1 class="h3 mb-2 text-gray-800">Tables</h1>
<p class="mb-4">
    DataTables is a third party plugin that is used to generate the demo table below.
    For more information about DataTables, please visit the <a target="_blank"
                                                               href="https://datatables.net">official DataTables documentation</a>.
</p>
<a class="btn btn-warning" asp-action="create" asp-controller="category">Create</a>
<br />
<!-- DataTales Example -->
<div class="card shadow mb-4 ">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var category in Model.Categories){
                    <tr>
                        <td> @category.Id</td>
                        <td>@category.Title </td>
                        <td>@category.CreatedAt.ToShortDateString()</td>
                        <td>
                                <a  class="btn btn-primary  " asp-action="update" asp-controller="category" asp-route-id="@category.Id">Update</a>
                                <form asp-route-id="@category.Id" method="post" asp-action="delete" asp-controller="category">
                                    @*  <input id="id" name="id"  value="@category.Id" type="hidden" />*@
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                        </td>       
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>